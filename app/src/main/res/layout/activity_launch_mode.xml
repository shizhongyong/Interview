<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<Button
		android:id="@+id/standard"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:onClick="standard"
		android:text="standard" />

	<Button
		android:id="@+id/singleTop"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:onClick="singleTop"
		android:text="singleTop" />

	<Button
		android:id="@+id/singleTask"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:onClick="singleTask"
		android:text="singleTask" />

	<Button
		android:id="@+id/singleInstance"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:onClick="singleInstance"
		android:text="singleInstance" />

</LinearLayout>
